<%- include("../../partials/header", { title: "Supprimer un utilisateur" }) %>
<%- include("../../partials/navbar", { user :user}) %>

<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg border-danger" style="max-width: 500px;">
    <div class="card-header bg-danger text-white text-center">
      <h4>Confirmer la suppression</h4>
    </div>

    <div class="card-body text-center">
      <p class="fs-5">
        Voulez-vous vraiment supprimer l'utilisateur :
        <br>
         <strong class="text-danger"><%= userData.username %></strong> avec adresse email<br>
        <strong class="text-danger"><%= userData.email %></strong>
      </p>

      <form action="/users/delete/<%= userData._id %>" method="POST">
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a href="/users" class="btn btn-secondary">Annuler</a>
      </form>
    </div>
  </div>
</div>

<%- include("../../partials/footer") %>
