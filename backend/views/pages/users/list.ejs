<%- include("../../partials/header") %>
<%- include("../../partials/navbar", { user: user }) %>

<div class="container py-5">

  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h3 class="mb-0">Liste des utilisateurs</h3>
    </div>

    <div class="card-body">

      <div class="d-flex justify-content-between mb-3">
        <p class="text-muted mb-0">Total utilisateurs : <strong><%= users.length %></strong></p>

        <a href="/users/create" class="btn btn-success">
          <i class="bi bi-plus-circle"></i> Ajouter un utilisateur
        </a>
      </div>

      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              
              <th>Nom</th>
              <th>Email</th>
              <th>Rôle</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% users.forEach(user => { %>
              <tr>
               
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role || 'utilisateur' %></td>

                <td class="text-center">

                  <a href="/users/edit/<%= user.email %>" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Éditer
                  </a>

                  <form action="/users/delete/<%= user._id %>" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer cet utilisateur ?');">
                      <i class="bi bi-trash"></i> Supprimer
                    </button>
                  </form>

                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>


<%- include("../../partials/footer") %>
