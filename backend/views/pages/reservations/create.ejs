<%- include("../../partials/header") %>
<%- include("../../partials/navbar", { user :user }) %>

<%
/**
 * @file reservations/create.ejs
 * @description Page EJS permettant de créer une nouvelle réservation
 */
%>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">
            Créer une Réservation
        </div>

        <div class="card-body">
            <%
            /**
             * @description Formulaire de création d'une réservation
             * @method POST
             * @route /reservations/create
             */
            %>
            <form action="/reservations/create" method="POST">

                <!-- Ligne 1 : Numéro Catway, Client, Bateau -->
                <div class="row mb-3">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <%
                        /**
                         * @input catwayNumber
                         * @type {number}
                         * @description Numéro du catway réservé
                         */
                        %>
                        <label for="catwayNumber" class="form-label fw-semibold">Numéro du Catway</label>
                        <input type="number" id="catwayNumber" name="catwayNumber" class="form-control shadow-sm" placeholder="Numéro du Catway" required>
                    </div>

                    <div class="col-md-4 mb-3 mb-md-0">
                        <%
                        /**
                         * @input clientName
                         * @type {string}
                         * @description Nom du client effectuant la réservation
                         */
                        %>
                        <label for="clientName" class="form-label fw-semibold">Nom du Client</label>
                        <input type="text" id="clientName" name="clientName" class="form-control shadow-sm" placeholder="Nom du client" required>
                    </div>

                    <div class="col-md-4">
                        <%
                        /**
                         * @input boatName
                         * @type {string}
                         * @description Nom du bateau concerné par la réservation
                         */
                        %>
                        <label for="boatName" class="form-label fw-semibold">Nom du Bateau</label>
                        <input type="text" id="boatName" name="boatName" class="form-control shadow-sm" placeholder="Nom du bateau" required>
                    </div>
                </div>

                <!-- Ligne 2 : Dates -->
                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <%
                        /**
                         * @input startDate
                         * @type {string}
                         * @format date
                         * @description Date de début de la réservation
                         */
                        %>
                        <label for="startDate" class="form-label fw-semibold">Date de début</label>
                        <input type="date" id="startDate" name="startDate" class="form-control shadow-sm" required>
                    </div>

                    <div class="col-md-6">
                        <%
                        /**
                         * @input endDate
                         * @type {string}
                         * @format date
                         * @description Date de fin de la réservation
                         */
                        %>
                        <label for="endDate" class="form-label fw-semibold">Date de fin</label>
                        <input type="date" id="endDate" name="endDate" class="form-control shadow-sm" required>
                    </div>
                </div>

                <!-- Boutons -->
                <%
                /**
                 * @description Boutons de soumission ou d'annulation du formulaire
                 */
                %>
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm fw-semibold">
                        <i class="bi bi-plus-circle me-1"></i> Créer
                    </button>

                    <a href="/reservations/list" class="btn btn-outline-secondary btn-lg shadow-sm fw-semibold">
                        <i class="bi bi-x-circle me-1"></i> Annuler
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include("../../partials/footer") %>
