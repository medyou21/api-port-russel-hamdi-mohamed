<%- include("../../partials/header") %>
<%- include("../../partials/navbar", { user: user }) %>

<div class="container mt-5">

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-diagram-3"></i> Liste des Catways
            </h3>
        </div>

        <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <p class="text-muted mb-0">Total Catways : <strong><%= catways.length %></strong></p>
            <a href="/catways/create" class="btn btn-success mb-3">
                <i class="bi bi-plus-circle"></i> Créer un Catway
            </a>
        </div>
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Numéro</th>
                        <th>Type</th>
                        <th>État</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% catways.forEach(c => { %>
                        <tr>
                            <td><%= c.catwayNumber %></td>
                            <td class="text-capitalize"><%= c.catwayType %></td>
                            <td>
                                <% if (c.catwayState === "disponible") { %>
                                    <span class="badge bg-success">Disponible</span>
                                <% } else if (c.catwayState === "occupé") { %>
                                    <span class="badge bg-danger">Occupé</span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= c.catwayState %></span>
                                <% } %>
                            </td>

                            <td class="text-center">

                                <a href="/catways/edit/<%= c._id %>" 
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Éditer
                                </a>

                                <a href="/catways/delete/<%= c._id %>" class="btn btn-sm btn-danger">
    <i class="bi bi-trash"></i> Supprimer
</a>


                            </td>

                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<%- include("../../partials/footer") %>
