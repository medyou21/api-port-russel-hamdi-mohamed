<%- include("../../partials/header") %>
<%- include("../../partials/navbar", { user : user }) %> 

<%
/**
 * @file catways/edit.ejs
 * @description Page EJS permettant de modifier un catway existant.
 */
%>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            Modifier Catway
        </div>

        <div class="card-body">
            <%
            /**
             * @description Formulaire de modification d'un catway
             * @method POST
             * @route /catways/edit/:id
             * @param {number} catwayNumber - Numéro du catway
             * @param {string} catwayType - Type du catway ("short" ou "long")
             * @param {string} catwayState - État du catway
             */
            %>
            <form action="/catways/edit/<%= catway._id %>" method="POST">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <%
                        /**
                         * @input catwayNumber
                         * @type {number}
                         * @description Numéro du catway à modifier
                         */
                        %>
                        <label for="catwayNumber" class="form-label fw-semibold">Numéro</label>
                        <input type="number" id="catwayNumber" name="catwayNumber" class="form-control shadow-sm" value="<%= catway.catwayNumber %>" required>
                    </div>

                    <div class="col-md-4">
                        <%
                        /**
                         * @input catwayType
                         * @type {string}
                         * @description Type du catway ("short" ou "long")
                         */
                        %>
                        <label for="catwayType" class="form-label fw-semibold">Type</label>
                        <select id="catwayType" name="catwayType" class="form-select shadow-sm" required>
                            <option value="short" <%= catway.catwayType === 'short' ? 'selected' : '' %>>Short</option>
                            <option value="long" <%= catway.catwayType === 'long' ? 'selected' : '' %>>Long</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <%
                        /**
                         * @input catwayState
                         * @type {string}
                         * @description État actuel du catway
                         */
                        %>
                        <label for="catwayState" class="form-label fw-semibold">État</label>
                        <input type="text" id="catwayState" name="catwayState" class="form-control shadow-sm" value="<%= catway.catwayState %>" required>
                    </div>
                </div>

                <%
                /**
                 * @description Boutons du formulaire pour valider la modification ou annuler
                 */
                %>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Modifier</button>
                    <a href="/catways/" class="btn btn-outline-secondary btn-lg shadow-sm fw-semibold">
                        <i class="bi bi-x-circle me-1"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../../partials/footer") %>
